<Window x:Class="PiDu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStyle="None" ResizeMode="NoResize"
        PreviewMouseMove="HandlePreviewMouseMove">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Grid" x:Key="ContentBackground">
                <Setter Property="Background" Value="Gray"/>
            </Style>
            <Style TargetType="Rectangle" x:Key="NowPlayingHeader">
                <Setter Property="Fill">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="LightGray" Offset="1"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Height" Value="80"/>
            </Style>
            <Style TargetType="Border" x:Key="Border">
                <Setter Property="BorderBrush"  Value="Orange"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
            <Style TargetType="Button" x:Key="WindowButtonStyle">
                <Style.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Webdings"/>
                        <Setter Property="Foreground" Value="#FF919191"/>
                        <Setter Property="FontSize" Value="13.333"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </Style.Resources>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
            <Style TargetType="StackPanel" x:Key="NowPlayingControls">
                <Style.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </Style.Resources>
            </Style>
            <Style TargetType="Grid" x:Key="Playlist">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Height" Value="250"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Margin" Value="15 0 0 15"/>
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Opacity" Value="0.7"/>
                <Style.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style TargetType="ListBox">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Grid.Resources>
        
        <Grid Style="{StaticResource ContentBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Rectangle Style="{StaticResource NowPlayingHeader}"
                PreviewMouseDown="HandleHeaderPreviewMouseDown" />

                <StackPanel Orientation="Horizontal" Style="{StaticResource NowPlayingControls}">
                    <Button Content="Loop"/>
                    <Button Content="Rew"/>
                    <Button Content="Play"/>
                    <Button Content="FF"/>
                    <Button Content="Shuf"/>
                </StackPanel>
                
                <!-- Begin album grid area -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ItemsControl x:Name="albumGrid" ItemsSource="{Binding FilteredAlbums}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="100" Height="100" Background="Lavender" Click="AlbumArt_Click" 
                                    Command="{Binding DataContext.SelectAlbum, RelativeSource=
      {RelativeSource FindAncestor, AncestorType=Window}}" 
                                    CommandParameter="{Binding}">
                                    <Button.Content>
                                        <TextBlock Text="{Binding Title}"/>
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <!-- End album grid area -->
                
                <!-- Begin playlist area -->
                <Grid Grid.Row="1" Style="{StaticResource Playlist}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="ARTISTS > MUSE > BLACK HOLES + REVELATIONS"/>
                    <TextBlock Text="Alternative Rock | 3 July 2006" Grid.Row="1"/>
                    <ListBox Grid.Row="2">
                        
                    </ListBox>
                </Grid>
                <!-- End playlist area -->
                
            </Grid>
            <Button Style="{StaticResource WindowButtonStyle}"
                HorizontalAlignment="Right"
                Margin="500,6,45,0"
                VerticalAlignment="Top"
                Click="HandleMinimizeClick">
                <TextBlock Text="0" />
            </Button>
            <Button Style="{StaticResource WindowButtonStyle}"
                HorizontalAlignment="Right"
                Margin="500,6,26,0"
                VerticalAlignment="Top"
                Click="HandleRestoreClick">
                <TextBlock Text="1"/>
            </Button>
            <Button Style="{StaticResource WindowButtonStyle}"
                HorizontalAlignment="Right"
                Margin="500,6,8,0"
                VerticalAlignment="Top"
                Click="HandleCloseClick">
                <TextBlock Text="r"/>
            </Button>
        </Grid>
        <Grid
            x:Name="contentGrid"
            x:FieldModifier="private">
            <Border
                x:Name="m_roundBorder"
                x:FieldModifier="private"
                Style="{StaticResource Border}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Rectangle
                Stroke="{x:Null}"
                VerticalAlignment="Top"
                Height="7"
                x:Name="top"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Margin="8,0,8,0"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                x:Name="bottom"
                Height="7"
                VerticalAlignment="Bottom"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Margin="8,0,8,0"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                HorizontalAlignment="Left"
                Margin="0,7,0,7"
                Width="8"
                x:Name="left"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                Margin="0,7,0,7"
                Width="8"
                HorizontalAlignment="Right"
                x:Name="right"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="8"
                Height="7"
                x:Name="bottomLeft"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                VerticalAlignment="Bottom"
                Height="7"
                Width="8"
                HorizontalAlignment="Right"
                x:Name="bottomRight"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                HorizontalAlignment="Right"
                Width="8"
                Height="7"
                VerticalAlignment="Top"
                x:Name="topRight"
                PreviewMouseDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Fill="#00000000" />
            <Rectangle
                Stroke="{x:Null}"
                HorizontalAlignment="Left"
                Width="8"
                VerticalAlignment="Top"
                Height="7"
                x:Name="topLeft"
                PreviewMouseLeftButtonDown="HandleRectanglePreviewMouseDown"
                MouseMove="HandleRectangleMouseMove"
                Fill="#00000000" />
            <Path
                x:Name="m_resize"
                x:FieldModifier="private"
                Data="M9.5390625,2.4619789 L9.5390625,11.133854 L0.8671875,11.133854 z"
                HorizontalAlignment="Right"
                Height="8.672"
                Margin="0,0,1,1"
                RenderTransformOrigin="0.5,0.5"
                Stretch="Fill"
                VerticalAlignment="Bottom"
                Width="8.672"
                StrokeDashArray="0.5 1"
                StrokeDashOffset="2"
                Fill="Orange"
                IsHitTestVisible="False"
                IsEnabled="False"
                StrokeThickness="0">
                <Path.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Path.RenderTransform>
            </Path>
            
        </Grid>
        
    </Grid>

</Window>
